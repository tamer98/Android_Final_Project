<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ATCheck_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ATCheck">
        <activity
            android:name=".SummaryActivity"
            android:exported="false" />
        <activity
            android:name=".StudentsListActivity"
            android:exported="false" />
        <activity
            android:name=".AddStudentsActivity"
            android:exported="false" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".SetProfileActivity" />
        <activity android:name=".OTPAuthenticationActivity" />
        <activity android:name=".PhoneVerActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>